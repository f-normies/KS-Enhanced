{
  "manifest_version": 3,
  "name": "KS Enhanced",
  "version": "2.0",
  "description": "Chrome add-on for enhanced experience on ks2.rsmu.ru.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://ks.rsmu.ru/*",
        "https://ks2.rsmu.ru/*"
      ],
      "js": ["content.js"]
    },
    {
      "matches": [
        "https://ks.rsmu.ru/tests2/questions*",
        "https://ks2.rsmu.ru/tests2/questions*"
      ],
      "js": ["intercept.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  }
}
  